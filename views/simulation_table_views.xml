    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">simulation.table.form</field>
        <field name="model">simulation.table</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <button name="action_simulate" type="object" string="Simulate!"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="years_to_simulate"/>
                        <field name="included_deposits"/>
                        <field name="included_withdrawals"/>
                    </group>
                    <group name="Output">
                        <field name="output"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="simulation_table_tree" model="ir.ui.view">
        <field name="name">simulation.table.tree</field>
        <field name="model">simulation.table</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="simulation_table_action" model="ir.actions.act_window">
        <field name="name">Simulations</field>
        <field name="res_model">simulation.table</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
